#!/bin/bash

if [ -z $QUIP_HOME ]; then
   echo "$0: Need QUIP_HOME defined"
   exit 1
fi
if [ -z $QUIP_HOME ]; then
   echo "$0: Need QUIP_HOME defined"
   exit 1
fi

mydir=`dirname $0`
bindir=$mydir/../build.$QUIP_ARCH

if [ ! -x $bindir/md ]; then
   echo "$0 needs $bindir/md executable"
   exit 2
fi

cat<<EOF > test_md.in.xyz
8
Lattice="5.428835          0.000000          0.000000          0.000000          5.428835          0.000000          0.000000          0.000000          5.428835" Properties=species:S:1:pos:R:3
  Si      0.1000000      0.0000000      0.0000000
  Si      2.7144176      2.6144176      0.0000000
  Si      2.7144176      0.0000000      2.7144176
  Si      0.0000000      2.7144176      2.7144176
  Si      1.3572088      1.3572088      1.3572088
  Si      4.0716264      4.0716264      1.3572088
  Si      4.0716264      1.3572088      4.0716264
  Si      1.3572088      4.0716264      4.0716264
EOF

cat<<EOF2 > test_md.traj_ref.xyz
Si 0.0373138234 0.0162570897 0.0220034794
Si 2.6883050493 2.6892127445 -0.0471159207
Si 2.7505791801 -0.0026373295 2.7064228232
Si 0.0016876501 2.7210663050 2.6759120342
Si 1.3751401598 1.3913627838 1.3580128519
Si 4.0509489980 4.0352867460 1.3625290099
Si 4.0503599351 1.3206667202 4.0801757046
Si 1.3860213006 4.0757748339 4.1062771491
EOF2

cat<<EOF3 > test_md.out_ref
ST        0.00      0.0000      0.0000    0.23E+02      0.00000000E+00      0.00000000E+00      0.15511293E+00     -0.34347612E+02     -0.34347612E+02
ST        1.00    313.0982      3.1154    0.23E+02      0.00000000E+00      0.00000000E+00      0.16188526E+00     -0.34354415E+02     -0.34354415E+02
ST        2.00    324.7638      6.3158    0.23E+02      0.00000000E+00      0.00000000E+00      0.16791689E+00     -0.34360476E+02     -0.34360476E+02
ST        3.00    334.5580      9.5819    0.23E+02      0.00000000E+00      0.00000000E+00      0.17298091E+00     -0.34365566E+02     -0.34365566E+02
ST        4.00    342.0861     12.8904    0.23E+02      0.00000000E+00      0.00000000E+00      0.17687324E+00     -0.34369481E+02     -0.34369481E+02
ST        5.00    347.0172     16.2150    0.23E+02      0.00000000E+00      0.00000000E+00      0.17942285E+00     -0.34372047E+02     -0.34372047E+02
ST        6.00    349.1037     19.5273    0.23E+02      0.00000000E+00      0.00000000E+00      0.18050167E+00     -0.34373137E+02     -0.34373137E+02
ST        7.00    348.1986     22.7976    0.23E+02      0.00000000E+00      0.00000000E+00      0.18003367E+00     -0.34372672E+02     -0.34372672E+02
ST        8.00    344.2695     25.9963    0.23E+02      0.00000000E+00      0.00000000E+00      0.17800216E+00     -0.34370635E+02     -0.34370635E+02
ST        9.00    337.4086     29.0949    0.23E+02      0.00000000E+00      0.00000000E+00      0.17445481E+00     -0.34367075E+02     -0.34367075E+02
ST       10.00    327.8362     32.0674    0.23E+02      0.00000000E+00      0.00000000E+00      0.16950543E+00     -0.34362104E+02     -0.34362104E+02
ST       10.00    327.8362     32.0674    0.23E+02      0.00000000E+00      0.00000000E+00      0.16950543E+00     -0.34362104E+02     -0.34362104E+02
EOF3

$bindir/md atoms_in_file=test_md.in.xyz pot_init_args='{IP SW}' params_in_file=$QUIP_HOME/QUIP_Core/parameters/ip.parms.SW.xml trajectory_out_file=test_md.traj.xyz T=300.0 dt=1.0 N_steps=10 rng_seed=1 | egrep '^ST ' > test_md.out
tail -8 test_md.traj.xyz | awk '{print $1" "$2" "$3" "$4}' > test_md.traj_pos.xyz

echo -n "$0: "
if ndiff test_md.traj_ref.xyz test_md.traj_pos.xyz > /dev/null 2>&1; then
   echo -n "final pos OK "
else
   echo -n "final pos differs "
fi
if ndiff test_md.out_ref test_md.out > /dev/null 2>&1; then
   echo -n "E/T OK"
else
   echo -n "E/T differs"
fi

echo ""

# rm -f test_md.*
