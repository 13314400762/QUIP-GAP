# declarations

F77 = pgf77
F90 = pgf90
F95 = pgf90
CC = pgcc
CPLUSPLUS = pgCC
LINKER = pgf90

#set environment variable GFORTRAN_ERROR_DUMPCORE at runtime to produce cores from runtime errors
DEFAULT_DEBUG = -g -traceback -DDUMP_CORE_ON_ABORT
DEFAULT_OPTIM = -O0
CDEBUG = -g -DDUMP_CORE_ON_ABORT
COPTIM = -O0

# -DNO_F2003_NEW_LINE -DNEED_ERF
DEFINES += -DNO_FORTRAN_ISNAN -DPGI_IOSTAT_FUNCS -DGETARGS_F2003 -DGETENV_F2003 -DALLOCATABLE_COMPONENT_MANUAL_COPY 
# -DPOINTER_COMPONENT_MANUAL_COPY 
F95FLAGS += -Mpreprocess -Mfree -Mextend
F77FLAGS += -Mpreprocess
CFLAGS +=  -DFORTRAN_UNDERSCORE
CPLUSPLUSFLAGS +=  -DFORTRAN_UNDERSCORE 

MAKEDEP_ARGS = -lc -suffix .mod
AR_ADD = src

QUIPPY_FCOMPILER = pg
QUIPPY_F90FLAGS = -Mpreprocess -Mfree -Mallocatable=03
#-DNO_F2003_NEW_LINE -DNEED_ERF
QUIPPY_DEFINES = -DNO_FORTRAN_ISNAN -DPGI_IOSTAT_FUNCS -DGETARGS_F2003 -DGETENV_F2003 -DALLOCATABLE_COMPONENT_MANUAL_COPY 
# -DPOINTER_COMPONENT_MANUAL_COPY 
QUIPPY_CPP = pgf90 -E
QUIPPY_INSTALL_OPTS = --home=${HOME}
QUIPPY_DEBUG = 0
QUIPPY_F77FLAGS = -noswitcherror
# QUIPPY_F2PY_OPTS = --pgi-pointer-hack

# rules

.f95.o:
	@if ( which ${SCRIPT_PATH}protect_mod >/dev/null 2>&1 ); then ${SCRIPT_PATH}protect_mod $(MAKEDEP_ARGS) -- $<; fi
	${F95} ${F95FLAGS} -I$(<D) -E $< | f90wrap_semicol > $*.f90
	${F95} ${F95FLAGS} -I$(<D) -c $*.f90 -o $@
	@if ( which ${SCRIPT_PATH}unprotect_mod >/dev/null 2>&1 ); then env OD_SKIP=52 ${SCRIPT_PATH}unprotect_mod $(MAKEDEP_ARGS) -- $<; fi
